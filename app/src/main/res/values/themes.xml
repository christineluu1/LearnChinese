<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearnChinese" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gold_logo</item> <!-- a verifier si bon -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!-- Creation du composant titre par defaut. -->
    <style name="DefaultTextStyle">
        <item name="android:textColor">@color/gold_logo</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/ltc_record</item>
    </style>


    <style name = "Default_Sub_TextStyle">
        <item name="android:textColor">@color/gold_logo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/ltc_record</item>
    </style>


    <!-- Creation du composant sous-titre par defaut. -->
    <style name="SubtitleTextStyle" parent="DefaultTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/kkanit</item>
    </style>

    <!-- Creation du composant sous-titre par defaut. -->
    <style name="TitleTextStyle" parent="SubtitleTextStyle">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:fontFamily">@font/kkanit</item>
        <item name="android:textSize">26sp</item>

    </style>

    <style name="Theme.LearnChinese.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LearnChinese.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.LearnChinese.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>